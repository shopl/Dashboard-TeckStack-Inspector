{
  "manifest_version": 3,
  "name": "TechStack-Inspector",
  "version": "0.1",
  "description": "Detects and highlights JSP and React components on a page",
  "permissions": ["activeTab", "scripting"],
    "host_permissions": [
    "https://dashboard.shoplworks.com/*",
    "https://dev.shopl.work/*",
    "https://qa-dashboard.shoplworks.com/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
    "matches": [
        "https://dashboard.shoplworks.com/*",
        "https://dev.shopl.work/*",
        "https://qa-dashboard.shoplworks.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}