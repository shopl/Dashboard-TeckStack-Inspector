{
  "manifest_version": 3,
  "name": "TechStack-Inspector",
  "version": "0.1",
  "description": "Detects and highlights JSP and React components on a page",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}